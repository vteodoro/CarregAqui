<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".view.MainActivity">

    <Button
        android:id="@+id/recarregar"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="300dp"
        android:layout_centerHorizontal="true"
        android:text="@string/recarregar"
        android:textSize="17dp"
        android:background="@color/button"
        android:clickable="true"
        android:onClick="recarCard"/>

    <ImageView
        android:id="@+id/card01"
        android:src="@drawable/bom"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="25dp"/>

    <ImageView
        android:id="@+id/card02"
        android:src="@drawable/legal"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_marginTop="45dp"
        android:layout_marginLeft="170dp"/>

    <TextView
        android:id="@+id/moeda1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/moeda"
        android:textColor="@color/text"
        android:textSize="17dp"
        android:layout_marginTop="193dp"
        android:layout_marginLeft="25dp"
        />

    <EditText
        android:id="@+id/saldo1Rec"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp"
        android:layout_marginLeft="45dp"
        android:backgroundTint="@color/text"

        android:textColorHint="@color/text"
        android:textColor="@color/text"
        android:inputType="numberDecimal"/>

    <TextView
        android:id="@+id/moeda2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/moeda"
        android:textColor="@color/text"
        android:textSize="17dp"
        android:layout_marginTop="193dp"
        android:layout_marginLeft="170dp"
        />

    <EditText
        android:id="@+id/saldo2Rec"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp"
        android:layout_marginLeft="195dp"
        android:backgroundTint="@color/text"

        android:textColorHint="@color/text"
        android:textColor="@color/text"
        android:inputType="numberDecimal"/>


</RelativeLayout>