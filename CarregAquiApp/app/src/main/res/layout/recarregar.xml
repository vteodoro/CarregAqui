<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".view.RecarActivity">

    <Button
        android:id="@+id/recarregar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="330dp"
        android:layout_marginRight="80dp"
        android:layout_centerHorizontal="true"
        android:text="@string/recarregar"
        android:textSize="17dp"
        android:textColor="@android:color/white"
        android:background="@drawable/drw_btn_back"
        android:clickable="true"
        android:onClick="recarCard"/>

    <ImageView
        android:id="@+id/card01"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/recarregar"
        android:layout_marginTop="61dp"
        android:src="@drawable/bom" />

    <ImageView
        android:id="@+id/card02"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_alignEnd="@+id/recarregar"
        android:layout_alignTop="@+id/card01"
        android:src="@drawable/legal" />

    <EditText
        android:id="@+id/saldo1Rec"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/recarregar"
        android:layout_marginTop="225dp"
        android:backgroundTint="@color/text"
        android:hint="R$"
        android:inputType="numberDecimal"
        android:textColor="@color/text"
        android:textColorHint="@color/text" />

    <EditText
        android:id="@+id/saldo2Rec"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/recarregar"
        android:layout_alignTop="@+id/saldo1Rec"
        android:backgroundTint="@color/text"
        android:hint="R$"
        android:inputType="numberDecimal"
        android:textColor="@color/text"
        android:textColorHint="@color/text" />


</RelativeLayout>